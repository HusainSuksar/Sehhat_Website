# PythonAnywhere Environment Variables for Umoor Sehhat
# Copy this file to .env and update the values with your actual information

# CRITICAL: Replace 'sehhat' with your actual PythonAnywhere username throughout this file

# Django Configuration
DEBUG=False
SECRET_KEY=your-super-secret-key-here-generate-new-one-minimum-50-characters
DJANGO_SETTINGS_MODULE=umoor_sehhat.settings_pythonanywhere

# Database Configuration (MySQL on PythonAnywhere)
# Get these values from your PythonAnywhere "Databases" tab
DB_NAME=sehhat$umoor_sehhat
DB_USER=sehhat
DB_PASSWORD=your-mysql-password-from-pythonanywhere-dashboard
DB_HOST=sehhat.mysql.pythonanywhere-services.com
DB_PORT=3306

# Allowed Hosts (replace 'sehhat' with your username)
ALLOWED_HOSTS=sehhat.pythonanywhere.com,localhost,127.0.0.1

# Static and Media Files (replace 'sehhat' with your username)
STATIC_ROOT=/home/sehhat/umoor_sehhat/staticfiles
MEDIA_ROOT=/home/sehhat/umoor_sehhat/media

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@sehhat.pythonanywhere.com

# Redis Configuration (Optional - only if you set up Redis)
REDIS_URL=

# Security Settings (can be False for testing on PythonAnywhere)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Time Zone
TIME_ZONE=Asia/Karachi

# Application Settings
TEST_MODE=False

# QUICK SETUP INSTRUCTIONS:
# 1. Copy this file: cp .env.pythonanywhere.example .env
# 2. Replace all instances of 'sehhat' with your PythonAnywhere username
# 3. Set DB_PASSWORD to your MySQL password from PythonAnywhere dashboard
# 4. Generate a new SECRET_KEY (you can use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
# 5. Save the file and test: python3.10 manage.py check --settings=umoor_sehhat.settings_pythonanywhere