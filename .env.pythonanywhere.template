# PythonAnywhere Environment Variables Template
# Copy this file to .env and fill in your actual values

# CRITICAL: Replace 'yourusername' with your actual PythonAnywhere username throughout this file

# Django Configuration
DEBUG=False
SECRET_KEY=your-super-secret-key-here-generate-new-one
DJANGO_SETTINGS_MODULE=umoor_sehhat.settings_pythonanywhere

# Database Configuration (MySQL on PythonAnywhere)
DB_NAME=yourusername$umoor_sehhat
DB_USER=yourusername
DB_PASSWORD=your-mysql-password-from-pythonanywhere-dashboard
DB_HOST=yourusername.mysql.pythonanywhere-services.com
DB_PORT=3306

# Allowed Hosts
ALLOWED_HOSTS=yourusername.pythonanywhere.com,localhost,127.0.0.1

# Static and Media Files
STATIC_ROOT=/home/yourusername/umoor_sehhat/staticfiles
MEDIA_ROOT=/home/yourusername/umoor_sehhat/media

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Redis Configuration (Optional - if using caching)
REDIS_URL=redis://localhost:6379/1

# Security Settings
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Time Zone
TIME_ZONE=Asia/Karachi

# Application Settings
TEST_MODE=False