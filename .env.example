# Django Configuration
DJANGO_SECRET_KEY=your-super-secret-key-here-50-characters-minimum
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=umoor_sehhat_db
DB_USER=umoor_sehhat_user
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@domain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@umoor-sehhat.com
SERVER_EMAIL=server@umoor-sehhat.com
ADMIN_EMAIL=admin@umoor-sehhat.com

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# External APIs
ITS_API_BASE_URL=https://its-api.example.com
ITS_API_KEY=your-its-api-key
ITS_API_SECRET=your-its-api-secret

# File Storage (for production)
DEFAULT_FILE_STORAGE=django.core.files.storage.FileSystemStorage
MEDIA_ROOT=/path/to/media/files
STATIC_ROOT=/path/to/static/files

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_DIR=/var/log/umoor_sehhat

# Performance Settings
DATABASE_CONN_MAX_AGE=300
CACHE_TTL=3600